{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.*"]
}
